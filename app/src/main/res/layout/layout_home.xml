<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@id/root_layout"
        app:layout_constraintStart_toEndOf="@id/root_layout">

        <!-- for adding programatically remove these lines -->

        <com.cunoraz.continuouscrollable.ContinuousScrollableImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:direction="left"
            android:background="@color/colorMain"
            app:duration="5000"
            app:scaleType="centerInside"
            app:imageSrc="@drawable/plane" />

        <com.cunoraz.continuouscrollable.ContinuousScrollableImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:direction="right"
            android:background="@color/colorMain"
            app:duration="5000"
            app:scaleType="centerInside"
            app:imageSrc="@drawable/cloud" />

        <com.cunoraz.continuouscrollable.ContinuousScrollableImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:direction="left"
            android:background="@color/colorMain"
            app:duration="7000"
            app:scaleType="centerInside"
            app:imageSrc="@drawable/plane" />

        <com.cunoraz.continuouscrollable.ContinuousScrollableImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:direction="left"
            android:background="@color/colorMain"
            app:duration="5000"
            app:scaleType="centerInside"
            app:imageSrc="@drawable/plane" />

        <com.cunoraz.continuouscrollable.ContinuousScrollableImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:direction="left"
            android:background="@color/colorMain"
            app:duration="3500"
            app:scaleType="centerInside"
            app:imageSrc="@drawable/cloud" />

        <com.cunoraz.continuouscrollable.ContinuousScrollableImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:direction="left"
            android:background="@color/colorMain"
            app:duration="5000"
            app:scaleType="centerInside"
            app:imageSrc="@drawable/plane" />

        <com.cunoraz.continuouscrollable.ContinuousScrollableImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:direction="right"
            app:duration="3000"
            android:background="@color/colorMain"
            app:imageSrc="@drawable/cloud"
            android:id="@+id/main_back2"
            app:scaleType="centerInside" />

        <com.cunoraz.continuouscrollable.ContinuousScrollableImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:direction="left"
            app:duration="4000"
            app:scaleType="centerInside"
            android:id="@+id/main_back3"
            app:imageSrc="@drawable/plane" />

        <com.cunoraz.continuouscrollable.ContinuousScrollableImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:direction="right"
            app:duration="6000"
            app:scaleType="centerInside"
            android:id="@+id/main_back4"
            app:imageSrc="@drawable/plane" />

    </LinearLayout>

    <Button
        android:id="@+id/play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/ic_baseline_house_30"
        android:drawablePadding="0dp"
        android:minHeight="200dp"
        android:minWidth="280dp"
        android:paddingLeft="30dp"
        android:paddingRight="20dp"
        android:paddingTop="-5dp"
        android:text="시작"
        android:background="@drawable/corners"
        android:fontFamily="@font/imcresoojin"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="200dp"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/imcresoojin"
        android:text="1초 퀴즈"
        android:textColor="#ffffff"
        android:textSize="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
